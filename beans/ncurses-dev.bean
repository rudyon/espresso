#!/bin/bash
echo "Brewing ncurses-dev..."
# Ensure /etc/espresso directory exists
mkdir -p /etc/espresso
cd /etc/espresso
# Download nano source
wget https://invisible-island.net/datafiles/current/ncurses.tar.gz
# Extract the tarball
tar -xzf ncurses.tar.xz
# Change directory to nano
cd ncurses
# Configure and install
make
make test
sudo make install
echo "Brewed ncurses-dev. Your coffee is ready. â˜•"
